---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404">
  <div class="min-h-[60vh] flex flex-col items-center justify-center px-4 py-20">
    <h1 class="font-serif text-8xl font-bold text-[var(--color-accent)] mb-4">404</h1>
    
    <p class="text-2xl text-[var(--color-fg)] mb-2">页面未找到</p>
    
    <p class="text-[var(--color-muted)] mb-8">你访问的页面不存在或已被移动</p>
    
    <a 
      href="/" 
      class="btn btn-primary px-6 py-3"
    >
      返回首页
    </a>
  </div>
</Layout>
