---
import { formatDate } from '../utils/helpers';

interface Props {
  title: string;
  description?: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  tags?: string[];
  slug: string;
  featured?: boolean;
}

const { 
  title, 
  description, 
  pubDate, 
  updatedDate, 
  heroImage, 
  tags = [], 
  slug,
  featured = false 
} = Astro.props;
---

<article class="card overflow-hidden group">
  {heroImage && (
    <a href={`/blog/${slug}`} class="block aspect-[2/1] overflow-hidden">
      <img 
        src={heroImage} 
        alt={title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
        onerror="this.style.display='none'"
      />
    </a>
  )}
  
  <div class="p-6 sm:p-8">
    <div class="flex items-center gap-3 mb-4 text-sm text-[var(--color-muted)]">
      <time datetime={pubDate.toISOString()} class="tracking-wide">{formatDate(pubDate)}</time>
      {featured && (
        <span class="text-xs px-2 py-1 border border-[var(--color-border)] rounded-full">精选</span>
      )}
    </div>
    
    <h2 class="font-serif text-2xl sm:text-3xl mb-3 leading-tight">
      <a href={`/blog/${slug}`} class="text-[var(--color-fg)] hover:opacity-70 transition-opacity">
        {title}
      </a>
    </h2>
    
    {description && (
      <p class="text-[var(--color-muted)] mb-4 line-clamp-2">{description}</p>
    )}
    
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.map(tag => (
          <a 
            href={`/tags/${tag}`}
            class="text-sm text-[var(--color-muted)] hover:text-[var(--color-fg)] transition-colors"
          >
            #{tag}
          </a>
        ))}
      </div>
    )}
  </div>
</article>
